<div class="container cards-container">
  <div class="cards-group row">

  <!-- ADD WIG CARD -->

      <div class="card new-wig-card card-size">

        <div class="card-body">
          <div class="inside-card">
            <!--h5 class="card-title">Add <h4>your</h4> wig</h5-->
            <br>
            <div class="mt-3">
              <%= link_to  "Add your wig", new_wig_path %>
            </div>
          </div>
        </div>
      </div>

    <% @wigs.each do |wig| %>
      <div class="card card-size">

        <% if wig.photo.attached? %>
          <%= cl_image_tag wig.photo.key, height: 300, width: 300, crop: :fill, class: "card-img-top card-img-size", cloud_name: "det3cfeuo" %>
        <% else %>
          <img class="card-img-top card-img-size" src="https://www.essence.com/wp-content/uploads/2017/02/1486507932/GettyImages-140390801.jpg" alt="Card image cap">
        <% end %>
        

        <div class="card-body">
          <h5 class="card-title"><%= wig.name %></h5>
          <h6 class="card-text"> <%= wig.color %><br> <%= wig.material %><br> <%= wig.style %></h6>
          <p class="card-text"><small class="text-muted"><%= time_ago_in_words(wig.created_at) %> ago</small></p>
          <%= link_to  "More about this wig", wig_path(wig) %>
        </div>
      </div>


    <% end %>
  </div>
</div>
