<div class="container margin-top-negative">
  <div class="show-container">
    <div class="row">
      <div class="col-8">
        <div class="wig-show-card">
          <h1><%= @wig.name %></h1>
          <p class="wig-show-color"><%= @wig.color %></p>
        </div>
        <div class="wig-show-card">
          <h3>A bit more about this wig:</h3>
          <p><%= @wig.description %></p>
          <!-- MAP -->
          <img class="card-img-top card-img-size" src="https://www.essence.com/wp-content/uploads/2017/02/1486507932/GettyImages-140390801.jpg" alt="Card image cap">
        </div>
      </div>

      <div class="col-4">
        <div class="wig-show-card">
          <h5>Book this wig!</h5>
            <%= simple_form_for [@wig, @booking] do |f| %>
              <%= f.input :start_date %>
              <%= f.input :end_date %>
              <%= f.button :submit, class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
