<h1> Your bookings </h1>
<div class="content-container">
  <div class="container">
    <div class="row">
    <div class="container">
<!--BOOKINGS PENDING-->
      <div class="bookings bookings-pending">
        <h3>pending bookings for your wigs</h3>
        <div class="booking-tab pending-items">
        <% if @bookings_from_other_users_to_my_wigs %> 
          <% @bookings_from_other_users_to_my_wigs.each do |booking| %>
            <% if booking.confirmed == nil %>
              <div class="item">
                <div class="item-body">
                  <%= cl_image_tag booking.wig.photo.key, height: 300, width: 300, crop: :fill, class: "card-img-top card-img-size", cloud_name: "det3cfeuo" %>
                  <h5 class="card-title"><%= booking.wig.name %></h5>
                  <p class="card-text"> Get it on: <%= booking.start_date %></p>
                  <p class="card-text">Return it on: <%= booking.end_date %></p>
                  <p class="text-muted">created <%= time_ago_in_words(booking.created_at) %> ago</p>
                  <%= link_to  "Confirm", confirm_path(booking), method: :patch, data: { confirm: "Are you sure?" }, class: "btn btn-success text-right" %>
                  <%= link_to  "  Deny  ", confirm_path(booking), method: :patch, data: { confirm: "Are you sure?" }, class: "btn btn-danger text-right" %>
                </div>
              </div>
            <% end %>
          <% end %>

        <% else %>
          <div class="nothing-here">
            <p>You're up to date</p>
          </div>
        <% end %>
        </div>
      </div>

<!--WIGS YOU BOOKED-->
      <div class="bookings wigs-you-booked">
        <h3>Wigs you booked</h3>
        <div class="booking-tab your-bookings">
          <% if @wigs_you_booked %>
            <% @wigs_you_booked.each do |booking| %>
              <div class="item">
              <div class="item-body">
                <%= cl_image_tag booking.wig.photo.key, height: 300, width: 300, crop: :fill, class: "card-img-top card-img-size", cloud_name: "det3cfeuo" %>
                <h5 class="card-title"><%= booking.wig.name %></h5>
                <p class="card-text"> Get it on: <%= booking.start_date %></p>
                <p class="card-text">Return it on: <%= booking.end_date %></p>
                <p class="text-muted">created <%= time_ago_in_words(booking.created_at) %> ago</p>
              </div>
            </div>
              <!--returned already?-->
            <% end %>
          <% else %>
            <div class="nothing-here">
              <p>You're up to date</p>
            </div>
          <% end %>
        </div>
      </div>

<!--CONFIRMED AND RETURNED WIGS-->
    
    </div>
    </div>
  </div>
</div>




